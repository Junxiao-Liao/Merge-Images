<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MergeImages.UI.ViewModels"
             x:Class="MergeImages.UI.Views.PreviewView"
             x:DataType="vm:PreviewViewModel">
  <Grid RowDefinitions="* ,Auto" Margin="12">
    <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="8">
      <ScrollViewer>
        <Image Source="{Binding MergedImageSource}" Stretch="Uniform" />
      </ScrollViewer>
    </Border>
    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
      <ComboBox ItemsSource="{Binding AvailableExportFormats}"
                SelectedItem="{Binding SelectedFormat}"
                Width="120" />
      <Button Content="Save As" Command="{Binding SaveAsCommand}" IsEnabled="{Binding CanExport}" />
      <Button Content="Back" Command="{Binding GoBackCommand}" />
    </StackPanel>
  </Grid>
</UserControl>
